<% if IpLocation.is_local?(request.env['HTTP_CF_CONNECTING_IP'] || request.remote_ip) %>
  <div class="row">
    <div class="alert alert-info col-md-6 col-md-offset-3 text-center">
      This is Epicenter sign in. &nbsp;For attendance sign in, go to <%= link_to '/attendance', attendance_path %>.
    </div>
  </div>
<% end %>

<div class="text-center">
  <p><%= image_tag "logo.png", id: 'logo' %></p>
  <h1>Welcome to the Epicenter</h1>
  <p><%= link_to '/auth/github', class: 'btn btn-default', id: 'github-sign-in-button' do %>
    <i class="fa fa-github"></i>
    Sign in with GitHub
    <% end %>
  </p>
  <p>or</p>
</div>

<%= render 'form' %>
