<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>
    <div id='navbar' class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <% if current_student && current_student.courses.any? %>
          <li><%= link_to 'Courses', student_courses_path(current_student), class: 'first-navbar-link' %></li>
          <li><%= link_to 'Payments', student_payments_path(current_student) %></li>
          <li><%= link_to 'Pair suggestions', random_pairs_path %></li>
          <li><%= link_to 'Profile', edit_student_registration_path %></li>
          <li><%= link_to 'Sign out', destroy_student_session_path, data: { method: :delete } %></li>
        <% elsif current_student && current_student.courses.empty? %>
          <li><%= link_to 'Payments', student_payments_path(current_student) %></li>
          <li><%= link_to 'Profile', edit_student_registration_path %></li>
          <li><%= link_to 'Sign out', destroy_student_session_path, data: { method: :delete } %></li>
        <% elsif current_admin %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle first-navbar-link" data-toggle="dropdown" role="button" aria-expanded="false">
              <%= current_admin.current_course.description %>
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to '+ Add a course', new_course_path %></li>
              <li class="divider"></li>
              <% Course.current_and_future_courses.reverse.each do |course| %>
                <%= render 'layouts/course_link', course: course %>
              <% end %>
              <li class="divider"></li>
              <% Course.previous_courses.reverse.each do |course| %>
                <%= render 'layouts/course_link', course: course %>
             <% end %>
            </ul>
          </li>
          <li><%= link_to 'Students', course_students_path(current_admin.current_course) %></li>
          <li><%= link_to 'Code reviews', course_code_reviews_path(current_admin.current_course) %></li>
          <li><%= link_to "Internships", internships_path %></li>
          <li><%= link_to 'Invite', new_student_invitation_path %></li>
          <li id="navbar-search">
            <%= render 'students/search' %>
          </li>
          <li><%= link_to 'Sign out', destroy_admin_session_path, data: { method: :delete } %></li>
        <% elsif current_company %>
          <% if params[:controller] == 'companies' %>
            <li class="active">
          <% else %>
            <li>
          <% end %>
            <%= link_to 'Internships', company_path(current_company), class: 'first-navbar-link' %></li>
          <% if params[:controller] == 'registrations' %>
            <li class="active">
          <% else %>
            <li>
          <% end %>
            <%= link_to 'Profile', edit_company_registration_path %></li>
          <li><%= link_to 'Sign out', destroy_company_session_path, data: { method: :delete } %></li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
