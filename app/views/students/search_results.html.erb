<% if @results.any? %>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <ul class="list-group">
        <% @results.each do |student| %>
          <h3><%= student.name %></h3>

          <div class="panel panel-default">
            <div class="panel-body">
              <% if student.deleted? %>
                <span class="label label-primary pull-right">Archived</span>
              <% elsif student.courses.empty? %>
                <span class="label label-primary pull-right">Not enrolled</span>
              <% elsif student.class_over? %>
                <span class="label label-info pull-right">Graduate</span>
              <% elsif student.courses.any? %>
                <span class="label label-success pull-right">Current student</span>
              <% end %>

              <% if student.deleted? %>
                <p><%= button_to 'Restore', student_restore_path(student), method: :patch, class: "btn btn-default" %></p>
              <% else %>
                <p><%= link_to 'Courses', student_courses_path(student) %></p>
                <p><%= link_to 'Payments', student_payments_path(student) %></p>
                <p><%= link_to 'Internships', course_student_path(student.internship_course, student) if student.internship_course %></p>
              <% end %>
            </div>
          </div>
        <% end %>
      </ul>
    </div>
  </div>
<% else %>
  <h3 class="text-center">No students found.</h3>
<% end %>
