<% content_for :title, @student.name %>

<%= render 'students/student_header' %>
<%= render 'students/student_nav' %>

<h3>Pair Feedback</h3>
<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="table-responsive">
          <table class="pair-evaluations-datatable table">
            <thead>
              <th>Date</th>
              <th>Evaluator</th>
              <th>Present</th>
              <th>Polite</th>
              <th>Comm</th>
              <th>Total</th>
              <th>Comments</th>
            </thead>
            <tbody class="sortable-list">
              <% @student.evaluations_by_pairs.each do |eval| %>
                <tr>
                  <td class="col-md-2"><%= eval.created_at.to_date.strftime("%B %d %Y") %></td>
                  <td class="col-md-2"><%= eval.student.name %></td>
                  <td class="col-md-1"><%= eval.q1_response %></td>
                  <td class="col-md-1"><%= eval.q2_response %></td>
                  <td class="col-md-1"><%= eval.q3_response %></td>
                  <td class="col-md-1"><%= eval.score %></td>
                  <td class="col-md-4"><%= eval.comments %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
